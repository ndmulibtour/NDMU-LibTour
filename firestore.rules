rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - for storing user profiles with roles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Feedback collection - public can write, admins can read
    match /feedback/{feedbackId} {
      allow create: if true; // Anyone can submit feedback
      allow read, update, delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'director'];
    }
    
    // Content management - only admins can write
    match /content/{document=**} {
      allow read: if true; // Public can read content
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Analytics - admins and directors can read
    match /analytics/{document=**} {
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'director'];
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}